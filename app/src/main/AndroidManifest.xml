<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.nickwinegar.spacexdemo">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".SpaceXDemoApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.launch.LaunchListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.launch.LaunchDetailActivity"
            android:label="@string/title_launch_detail"
            android:parentActivityName=".ui.launch.LaunchListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nickwinegar.spacexdemo.ui.launch.LaunchListActivity"/>
        </activity>
    </application>

</manifest>